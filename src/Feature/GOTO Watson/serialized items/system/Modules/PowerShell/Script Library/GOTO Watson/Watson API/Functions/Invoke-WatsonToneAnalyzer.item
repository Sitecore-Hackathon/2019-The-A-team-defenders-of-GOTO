Import-Function -Name Get-WatsonEndpoint
Import-Function -Name Get-WatsonApiKey
Import-Function -Name Convert-ToBase64
<#
    .SYNOPSIS
        Analyzes the tone from the given text through IBM's Watson API
    
    .PARAMETER Text
        Specifies the text to analyze
    
    .OUTPUT
        - Array of Document Tones and Scores
#>
function Invoke-WatsonToneAnalyzer {
    #($Text)
    [CmdletBinding()]
    param(
        [ValidateNotNullOrEmpty()]
        [string]$Text
    )
    #Build the needed parameters for the request
    $endpoint = "$(Get-WatsonEndpoint -ServiceName "Tone Analyzer")"
    $apikey = Get-WatsonApiKey -ServiceName "Tone Analyzer"
    $auth = Convert-ToBase64 -Text "apikey:$($apikey)"
    $headers = @{ Authorization = "Basic $($auth)" }
    $json = @{ text = $Text } | ConvertTo-Json

    #Invoke the webrequest with error handling
    $response = try {
        Invoke-WebRequest -Uri $endpoint -Method POST -ContentType "application/json" -Body $json -Headers $headers -UseBasicParsing
    }
    catch [System.Net.WebException] { 
        $_.Exception.Response 
    }

    #return the content to the caller
    $response.Content
}
